<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gamepage.MathGamePage.MathGameActivity"
    android:background="@color/colorBackgroundRed">


    <LinearLayout
        android:id="@+id/imgS1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgS3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgS2"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/imgS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/imgS1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgS1"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/imgS3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgS1"
        app:layout_constraintTop_toTopOf="@+id/imgS2"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/imgQ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgQ2"
        app:layout_constraintTop_toTopOf="@+id/imgQ2"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/imgQ2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/imgQ1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgQ3"
        app:layout_constraintTop_toTopOf="@+id/imgQ3"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/imgQ3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/imgQ2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgQ4"
        app:layout_constraintTop_toTopOf="@+id/imgQ4"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/imgQ4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/imgQ3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

</androidx.constraintlayout.widget.ConstraintLayout>