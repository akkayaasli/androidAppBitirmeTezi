<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackgroundRed"
    android:layout_height="match_parent"
    tools:context=".Gamepage.SoundObjectPage.SoundObjectActivity">

    <ImageView
        android:id="@+id/img_sound_object"
        android:layout_width="400dp"
        android:layout_height="400dp"

        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/atac" />

    <Button
        android:id="@+id/btn_sound_object_select1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/styl_main_start_btn"
        android:textColor="@drawable/listview_back_color"
        android:textSize="30sp"
        android:padding="10dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/btn_sound_object_select2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_sound_object" />

    <Button
        android:id="@+id/btn_sound_object_select2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/styl_main_start_btn"
        android:textColor="@drawable/listview_back_color"
        android:textSize="30sp"
        android:padding="10dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_sound_object_select1"
        app:layout_constraintTop_toTopOf="@+id/btn_sound_object_select1" />

    <Button
        android:id="@+id/btn_sound_object_select3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/styl_main_start_btn"
        android:textColor="@drawable/listview_back_color"
        android:textSize="30sp"
        android:padding="10dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/btn_sound_object_select4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sound_object_select1" />

    <Button
        android:id="@+id/btn_sound_object_select4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/styl_main_start_btn"
        android:textColor="@drawable/listview_back_color"
        android:textSize="30sp"
        android:padding="10dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_sound_object_select3"
        app:layout_constraintTop_toTopOf="@+id/btn_sound_object_select3" />
</androidx.constraintlayout.widget.ConstraintLayout>